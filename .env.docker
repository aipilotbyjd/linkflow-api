# LinkFlow API - Docker Environment
# Copy this to .env.docker before running docker-compose
#
# Usage: cp .env.docker.example .env.docker

APP_NAME=LinkFlow
APP_ENV=local
APP_KEY=base64:JMVoIAVKBclc7FxqZlbf31JRn5UPrqqGrRxfw2wQwPY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

LOG_CHANNEL=stack
LOG_LEVEL=debug

# Database - Docker networking uses container names
DB_CONNECTION=pgsql
DB_HOST=linkflow-postgres
DB_PORT=5432
DB_DATABASE=linkflow
DB_USERNAME=linkflow
DB_PASSWORD=linkflow

# Session
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Queue - Must use Redis for Go Engine integration
QUEUE_CONNECTION=redis

# Cache
CACHE_STORE=redis

# Redis - Docker networking uses container names
REDIS_CLIENT=phpredis
REDIS_HOST=linkflow-redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail
MAIL_MAILER=log
MAIL_FROM_ADDRESS="hello@linkflow.app"
MAIL_FROM_NAME="${APP_NAME}"

# Go Engine Integration
# This secret must match CALLBACK_SECRET in go-engine docker-compose
LINKFLOW_ENGINE_SECRET=your-shared-secret-change-in-production
